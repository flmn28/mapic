<!DOCTYPE html>
<html>
  <head>
    <title>MapLog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- 仮のheader -->
    <% if logged_in? %>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
          <div class="navbar-header">
            <button class="navbar-toggle" data-toggle="collapse" data-target=".target">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "MapLog", root_path, class: "navbar-brand" %>
          </div>

          <div class="collapse navbar-collapse target">
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "マイページ", user_path(current_user.id) %></li>
              <li><%= link_to "グループページ", users_path %></li>
              <li><%= link_to "ログアウト", logout_path, method: :post %></li>

              <!-- <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">
                  ユーザー設定 <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "アカウント編集", edit_user_path(current_user.id) %></li>
                  <li><%= link_to "ログアウト", logout_path, method: :post %></li>
                </ul>
              </li> -->
            </ul>
          </div>
        </div>
      </nav>
    <% end %>
    <!-- 仮のheaderここまで -->

    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
